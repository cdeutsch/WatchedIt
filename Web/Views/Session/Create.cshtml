@inherits System.Web.Mvc.WebViewPage<Web.Controllers.CreateForm>
@{
    View.Title = "Login";
    Html.EnableClientValidation();
}

<div id="login">
    <div class="container">
        <div>
        </div>
        
        <div class="column span-8 bpad-36 prepend-1">
            <h2 class="alt">Login</h2>

            @using (Html.BeginForm()) { 
                @Html.AntiForgeryToken()
                <div>
                    <label>Login</label><br />
                    @Html.TextBoxFor(oo => oo.UserLogin.LoginName)
                    @Html.ValidationMessageFor(oo => oo.UserLogin.LoginName, "*")
                </div>
                <div>
                    <label>Password</label><br />
                    @Html.PasswordFor(oo => oo.UserLogin.Password) 
                </div>
                <div>
                    <input type="submit" class="ui-button ui-widget ui-state-default ui-corner-all" value="Login" />
                </div>
            }
        </div>
        <div class="column span-8 bpad-36 prepend-1">
            <h2 class="alt">No account?</h2>

            @using (Html.BeginForm("register","session")) { 
                @Html.AntiForgeryToken()
                <div>
                    <label>User Name</label><br />
                    @Html.TextBoxFor(oo => oo.UserNew.Username)
                    @Html.ValidationMessageFor(oo => oo.UserNew.Username, "*") 

                </div>
                <div>
                    <label>Email</label><br />
                    @Html.TextBoxFor(oo => oo.UserNew.Email)
                </div>
                <div>
                    <label>Password</label><br />
                    @Html.Password("Password")
                </div>
                <div>
                    <label>Confirm</label><br />
                    @Html.Password("Confirm")
                </div>
                <div>
                    <input type="submit" class="ui-button ui-widget ui-state-default ui-corner-all" value="Sign Up" />
                </div>
            }
        </div>

    </div>
</div>

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame --> 
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /> 

    <title>@View.Title</title>
    
    @Html.CSS("bp")
    @Html.CSS("jquery-ui.css")
    @Html.CSS("jayj")
    @Html.CSS("site")
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]--> 
    <!--[if lte IE 7]>@Html.CSS("bp_ie")<![endif]--> 
    

    @Html.Script("MicrosoftAjax.js")
    @Html.Script("MicrosoftMvcValidation.js")
    @Html.Script("jquery.min.js")
    @Html.Script("jquery-ui.min.js")
    @Html.Script("ui.checkbox.js")
    @Html.Script("json2.min.js")
    @Html.Script("jquery.ajaxui.js")
    @Html.Script("watchedit.js")
    
    <script type="text/javascript">
        function makeButtons()
        {
            //hover states on the static widgets
            $('.ui-button').hover(
                function () { $(this).addClass('ui-state-hover'); },
                function () { $(this).removeClass('ui-state-hover'); }
            );
        }

        $(function () {
            makeButtons();
        });
    </script>

    @Html.Flash()
</head>

<body>
    <div id="flash" style="display:none"></div>
    <div class="container" id="wrapper">
        <header id="header" class="span-24">
            <div class="container">
                <div id="logo" class="column span-14">
                    <h1><a href="/">WatchedIt!</a></h1>
                </div>
                <div id="site-menu" class="column span-8 right">
                    @if (HttpContext.Current.User.Identity.IsAuthenticated) { 
                    <text>Hi @Html.Friendly() | </text>
                    <form id="fLougout" name="fLogout" action="@Url.Action("delete","session")" method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <a href="" onclick="fLogout.submit();return false;" >Logout</a>
                    </form>
                    } else {
                        @Html.ActionLink("Login","create","session")
                    } 
                </div>
            </div>

        </header>
        <div id="content">
            <!--<nav>
                <ul class="clearfix" id="menu"> 
                    <li class="current"><a href="index.html">Home</a></li>
                    <li>
                	    <a href="about.html">About</a>
                        <ul>
                            <li><a href="about.html">Subpage</a></li>
                            <li><a href="about.html">Subpage 2</a></li>
                        </ul>
                    </li>
                    <li><a href="contact.html">Contact</a></li>
                </ul>
                <br class="clear">
            </nav>-->

            <!-- Show a "Please Upgrade" box to both IE7 and IE6 users (Edit to IE 6 if you just want to show it to IE6 users) - jQuery will load the content from js/ie.html into the div -->
            <!--[if lte IE 7]>
        	    <div class="ie grid_7"></div>
            <![endif]-->

            @RenderBody()
        </div>
        <footer id="footer" class="span-24">
            Copyright &copy;@DateTime.Now.Year <a href="mailto:cd@cdeutsch.com">CDeutsch</a>. See the 
            @Html.ActionLink("Privacy Terms","Privacy","Home")
            For what we do with your information
        </footer>
    </div>
</body>
</html>


